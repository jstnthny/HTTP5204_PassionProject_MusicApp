@model IEnumerable<PassionProjectV1.Models.SongDto> 

@{
    ViewBag.Title = "Create";
}

<div class="main-content">
    <form action="/Review/List">
        <input style="margin-top: 15px;" type="submit" class="btn btn-info" name="SongList" value="Reviews List" />
    </form>

   

    <form action="/Review/Create/" method="POST" class="new-review-form">
        <h2>Create A New Review &#128196;</h2>
        <div>

            <label>Song Name:</label>
       
                <select name="SongId">
                    @foreach (var songs in Model)
                    {
                        <option value="@songs.SongId">@songs.SongName</option>
                    }

                </select>

    

        </div>
        <div class="form-group">
            <label>First Name:</label> <input type="text" name="fname" />
        </div>
        <div class="form-group">
            <label>Last Name:</label> <input type="text" name="lname" />
        </div>
        <div class="form-group">
            <label>Review:</label> <textarea type="text" name="ReviewText"></textarea>
        </div>

        <div>
            <input type="submit" value="Create Review" />
        </div>
    </form>

</div>

