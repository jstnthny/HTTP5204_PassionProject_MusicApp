@model PassionProjectV1.Models.ReviewDto

@{
    ViewBag.Title = "DeleteConfirm";
}
<div class="main-content">

    <h2>Are you sure you want to delete this review?</h2>
    <button class="btn btn-info"><a href="/Review/List">Cancel</a></button>
    <h2>@Model.SongName</h2>
    <p>@Model.ReviewText</p>
    <p>By: @Model.fname @Model.lname</p>

    <form action="/Review/Delete/@Model.ReviewId" method="POST">
        <input type="submit" value="Confirm Delete" class="btn btn-success" />


    </form>

</div>
