@model IEnumerable<PassionProjectV1.Models.ReviewDto>
@{
    ViewBag.Title = "List";
}
<div class="main-content">
    <form action="/Review/New">
        <input type="submit" class="btn btn-info" name="NewReview" value="Add a new Review" style="margin-top: 15px;"/>
    </form>

    <h2>Reviews</h2>

    <p>
        @using (Html.BeginForm("List", "Review", FormMethod.Get))
        {
            @Html.TextBox("search") <input type="submit" value="search" />
        }
    </p>

    <p>@Html.ActionLink("View All Reviews", "List")</p>

    @if (Model.Count() == 0)
    {
        <p>There are no results for that search</p>
    }

    <div class="table-responsive"> 
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">@Html.DisplayNameFor(model => model.SongName)</th>
                    <th scope="col"> @Html.DisplayNameFor(model => model.ReviewText)</th>
                    <th scope="col">Reviewer</th>
                    <th scope="col"> </th>
                    <th scope="col"> </th>

                </tr>

            </thead>
            <tbody>


                @foreach (var item in Model)
                {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.SongName)</td>
                    <td>@Html.DisplayFor(modelItem => item.ReviewText)</td>
                    <td>@Html.DisplayFor(modelItem => item.fname) @Html.DisplayFor(modelItem => item.lname)</td>
                    <td>
                        <form action="/Review/Details/@item.ReviewId">
                            <input type="submit" class="btn btn-info" name="ReviewDetails" value="Details" />
                        </form>
                    </td>
                    <td>
                        <form action="/Review/Edit/@item.ReviewId">
                            <input type="submit" class="btn btn-info" name="ReviewUpdate" value="Update" />
                        </form>
                    </td>
                </tr>

                }

            </tbody>
        </table>
    </div>



</div>


